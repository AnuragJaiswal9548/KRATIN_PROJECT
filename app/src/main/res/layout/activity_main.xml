<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kratin Presents"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:gravity="center"
        android:text="EAT HEALTHY , STAY HEALTHY"
        android:textSize="20dp"
        android:textColor="#DC1C0E"
        android:textStyle="bold"
        tools:ignore="TextSizeCheck" />

<ImageView
    android:src="@drawable/vegetables"
    android:layout_marginTop="10dp"
    android:id="@+id/home_image"
    android:layout_below="@+id/txt2"
    android:layout_width="match_parent"
    android:layout_height="120dp"/>

    <TextView
        android:id="@+id/text_disease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_image"
        android:text="Are you suffering from any disease :"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_below="@id/text_disease"
        android:layout_marginTop="15dp"
        android:layout_width="80dp"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="40dp"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/img1"
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/headache"/>

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_below="@+id/card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Headache"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_below="@id/text_disease"
        android:layout_marginTop="15dp"
        android:layout_width="80dp"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="220dp"
        android:layout_height="80dp">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@drawable/tooth"/>

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_below="@+id/card2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tooth Decay"
        android:layout_marginStart="220dp"
        android:layout_marginTop="5dp"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_below="@id/card1"
        android:layout_marginTop="45dp"
        android:layout_width="80dp"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="40dp"
        android:layout_height="80dp">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/joints"/>

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_below="@+id/card3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joints Pain"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_below="@id/card2"
        android:layout_marginTop="45dp"
        android:layout_width="80dp"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="220dp"
        android:layout_height="80dp">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/stomach"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_below="@+id/card4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stomach-ache"
        android:layout_marginStart="220dp"
        android:layout_marginTop="5dp"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/card5"
        android:layout_below="@id/card3"
        android:layout_marginTop="45dp"
        android:layout_width="80dp"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="40dp"
        android:layout_height="80dp">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/infection"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_below="@+id/card5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Infection"
        android:layout_marginStart="52dp"
        android:layout_marginTop="5dp"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/card6"
        android:layout_below="@id/card3"
        android:layout_marginTop="45dp"
        android:layout_width="80dp"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="220dp"
        android:layout_height="80dp">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/facts"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_below="@+id/card5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Infection"
        android:layout_marginStart="230dp"
        android:layout_marginTop="5dp"
        />



</RelativeLayout>