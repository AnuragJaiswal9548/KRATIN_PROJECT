<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A1ADF1"
    tools:context=".Card2">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:text="Symptoms:"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
    app:cardCornerRadius="10dp"
    android:backgroundTint="#FACF50"
    android:layout_width="350dp"
    android:layout_marginStart="5dp"
    android:layout_height="wrap_content">
        <TextView
            android:layout_marginStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/t3"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:text="Precautions:"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:backgroundTint="#CDDC39"
        android:layout_width="350dp"
        android:layout_marginStart="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/t4"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food we should eat:"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/banana"
            android:layout_marginTop="5dp"
            android:src="@drawable/grains"
            android:layout_marginStart="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:src="@drawable/seafood"
            android:layout_marginStart="70dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:src="@drawable/garlic"
            android:layout_marginStart="130dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:src="@drawable/onion"
            android:layout_marginStart="180dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:src="@drawable/nuts"
            android:layout_marginStart="240dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:src="@drawable/apple"
            android:layout_marginStart="290dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <ImageView
            android:layout_below="@+id/banana"
            android:layout_marginTop="5dp"
            android:src="@drawable/carrots"
            android:layout_marginStart="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="For severe issue immediately contact doctor:"
        android:textSize="15dp"
        tools:ignore="TextSizeCheck" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:text="Book Appointment"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

</LinearLayout>